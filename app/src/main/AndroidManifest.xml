<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
  package="com.raywenderlich.android.foodmart">



  <application
    android:name=".app.PlaylistApplication"
    android:allowBackup="false"
    android:icon="@mipmap/ic_launcher"
    android:label="@string/app_name"
    android:roundIcon="@mipmap/ic_launcher_round"
    android:supportsRtl="true"
    android:theme="@style/AppTheme">
    <activity
      android:name=".ui.SplashActivity"
      android:theme="@style/SplashTheme">
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />

        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity>
    <activity
      android:name=".ui.songs.SongsActivity"
      android:launchMode="singleTop" />
    <activity
      android:name=".ui.play_song_screen.FoodActivity"
      android:parentActivityName=".ui.songs.SongsActivity"
      android:theme="@style/DetailTheme">
      <meta-data
        android:name="android.support.PARENT_ACTIVITY"
        android:value=".ui.songs.SongsActivity" />
    </activity>
    <activity
      android:name=".ui.cart.FavoriteScreenActivity"
      android:launchMode="singleTop"
      android:parentActivityName=".ui.songs.SongsActivity">
      <meta-data
        android:name="android.support.PARENT_ACTIVITY"
        android:value=".ui.songs.SongsActivity" />
    </activity>
    <activity
      android:name=".ui.checkout.CheckoutActivity"
      android:parentActivityName=".ui.cart.FavoriteScreenActivity">
      <meta-data
        android:name="android.support.PARENT_ACTIVITY"
        android:value=".ui.cart.FavoriteScreenActivity" />
    </activity>
    <activity android:name=".ui.categories.SongsGenreActivity"
      android:parentActivityName=".ui.songs.SongsActivity">
      <meta-data
        android:name="android.support.PARENT_ACTIVITY"
        android:value=".ui.songs.SongsActivity" />
    </activity>
  </application>

</manifest>